<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Action</th>
      <th>Id</th>
      <th>Name</th>
      <th>Address</th>
      <th>Contact no</th>
      <th>Raid Title</th>
      <th>Raid Date</th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td>
          <div>
          <%= link_to '#', class: "dropdown-toggle", :'data-toggle'=> "dropdown" do %><i class="fa fa-caret-right fa-2x"></i><%end%>
          <ul class="dropdown-menu dropdown-menu-action">
            <li><%= link_to 'Edit', edit_employer_path(employer) %></li>
            <li><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
          </div>
        </td>
        <td><%= employer.id %></td>
        <td><%= link_to employer.full_name, edit_employer_path(employer) %></td>
        <td><%= employer.address %></td>
        <td><%= employer.contact_no %></td>
        <td><%= employer.raid.title %></td>
        <td><%= employer.raid.datetime.strftime('%d, %B %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>