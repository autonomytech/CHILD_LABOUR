<p id="notice"><%= notice %></p>

<h1>Listing Employers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Contact no</th>
      <th>Is deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.first_name %></td>
        <td><%= employer.middle_name %></td>
        <td><%= employer.last_name %></td>
        <td><%= employer.address %></td>
        <td><%= employer.contact_no %></td>
        <td><%= employer.is_deleted %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

