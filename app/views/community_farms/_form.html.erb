<%= bootstrap_form_for([@raid, @community_farm]) do |f| %>
    <%= label_tag :location %>
    <%= text_field_tag :location, @location.name, class: 'form-control', disabled: true%><br/>
    <%= f.select :department_id, @departments %>
    <%= f.text_field :involve_member, id: 'involve_member', :"data-pre" => @community_farm.involve_members.to_json %>
    <% unless @community_farm.id.blank? %>
    <%= label_tag :submited_by %>
    <%= text_field_tag :submited_by, User.full_name(@community_farm.submited_by), class: 'form-control', disabled: true%><br/>
    <% end %>
    <%= f.submit 'Save', class: 'btn btn-primary'%>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
      $("#involve_member").tokenInput("/users.json", 
        {propertyToSearch: "full_name"});
  });
</script>