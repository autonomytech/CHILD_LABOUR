<%= bootstrap_form_for([@raid, @community_farm]) do |f| %>
    <%= label_tag "#{t('location')}"%>
    <%= text_field_tag :location, @location.name, class: 'form-control', disabled: true%><br/>
    <%= f.select :department_id, @departments, required: true %>
    <%= f.text_field :involve_member,label: "#{t('involve_members')}", id: 'involve_member', :"data-pre" => @community_farm.involve_members.to_json%>
    <% unless @community_farm.id.blank? %>
    <%= f.text_field :submited_by_user,label: "#{t('submitted_by_user')}", disabled: true%><br/>
    <% end %>
    <%= submit_tag "#{t('save')}", class: 'btn btn-primary'%>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
      $("#involve_member").tokenInput("/users.json", 
        {propertyToSearch: "full_name"});
  });
</script>