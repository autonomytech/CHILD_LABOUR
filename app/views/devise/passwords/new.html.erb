<div class="middle-box text-center loginscreen">
  <div>
    <div>
       <h1><%= image_tag 'logo.png'%></h1>
    </div>
    <h3>Forgot your password?</h3>
    <div style="text-align:left">
	<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-t" }) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email"%>
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary block full-width m-b"%>
    <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>