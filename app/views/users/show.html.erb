<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Id</th>
      <th>Title</th>
      <th>Date</th>
      <th>Time</th>
      <th>Raid for</th>
      <th>Location</th>
      <th>Child Labour</th>
      <th>Child Begger</th>
    </tr>
  </thead>

  <tbody>
    <% @raids.each do |raid| %>
      <tr>
        <td></td>
        <td><%= raid.id %></td>
        <td><%= raid.title %></td>
        <td><%= raid.datetime.strftime('%d, %B %Y') %></td>
        <td><%= raid.datetime.strftime('%I:%M %p') %></td>
        <td><%= raid.raid_for %></td>
        <td><%= raid.location.name %></td>
        <td><% unless raid.child_begger? %>
          <%= raid.child_labours_count %>
          <%else%>-<%end%></td>
        <td><% if raid.child_begger? %>
          <%= raid.child_beggers_count %>
          <%else%>-<%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>