<div class="add-btn">
<%= link_to 'New user', new_user_path, class: 'btn btn-primary btn-xs' %>
</div>
<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Action</th>
      <th>Id</th>
      <th>Title</th>
      <th>Name</th>
      <th>Role</th>
      <th>Department</th>
      <th>Designation</th>
      <th>Email</th>
      <th>Attained Raids</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <div>
          <%= link_to '#', class: "dropdown-toggle", :'data-toggle'=> "dropdown" do %><i class="fa fa-caret-right fa-2x"></i><%end%>
          <ul class="dropdown-menu dropdown-menu-action">
            <li><%= link_to 'Edit', edit_user_path(user) %></li>
            <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } unless (current_user.eql? user) || (user.is_primary) %></li>
          </ul>
        </div>
      </td>
      <td><%= user.id %></td>
      <td><%= user.title %></td>
      <td><%= link_to user.full_name, edit_user_path(user) %></td>
      <td><%= user.roles %></td>
      <td><%= user.departments %></td>
      <td><%= user.designation %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Status',user_path(user)%></td>
    </tr>
    <% end %>
  </tbody>
</table>