<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-4">
		<%= bootstrap_form_for(@user) do |f| %>
		<%= render 'form', f: f, user: @user%>
		<%= f.email_field :email, placeholder: 'Email' %>
		<%= f.password_field :password, placeholder: 'Password' %>
		<%= f.submit 'Save', class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>