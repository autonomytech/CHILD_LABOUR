<div class="add-btn">
<%= link_to 'Download Pdf', download_pdf_reports_path(type: 'cl_year_wise_report', year: @year) , class: 'btn btn-primary btn-xs', target: "_blank" %>
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Sr. No.</th>
      <th>Raid Id</th>
      <th>Raid Title</th>
      <th>Employer Name / Address</th>
      <th colspan="2">Child Labours (Name / Age)</th>
      <th>Police station</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
  	<% @raids.each_with_index do |raid, i|%>
    <tr>
    	<td><%= i+1 %></td>
    	<td><%= raid.id %></td>
    	<td><%= raid.title %></td>
    	<td><%= raid.employer_name %><br/>
          <%= raid.employer_address %></td>
    	<td><%= (child_labours(raid)[0]).html_safe %></td>
      <td><%= (child_labours(raid)[1]).html_safe %></td>
      <td><%= raid.department %></td>
      <td><%= raid.location.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>