<div class="add-btn">
<%= link_to "#{t('download_pdf')}", download_pdf_reports_path(type: 'panchnama', child_id: @child_labour), class: 'btn btn-primary btn-xs', target: "_blank" %>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-7">
    <div class="row reports">
      <div class="col-md-9">
      <p><%=t('police_station')%> %   <b><%= @raid.department%></b></p>
      </div>
      <div class="col-md-3">
      <p><%=t('date_')%> %  <b><%= @raid.datetime.strftime("%d, %B %Y")%></b></p>
      </div>
    </div>
   <div class="row reports">
      <div class="col-md-12">
      <p><%=t('child_labour_name')%> % <b><%=  @child_labour.full_name.upcase %><br>  </b><%=t('father_name')%> %  <b>  <%=  @child_labour.father_name.upcase %> <br> </b><%=t('mother_name')%> %  <b>  <%=  @child_labour.mother_name.upcase %>  , </b> <%=t('age')%> %  <b><%=  @child_labour.age %>  ,  </b>  <%=t('gender')%> %  <b>  <%=  @child_labour.gender %>  <br> </b><%=t('address')%> % <b><%=  @child_labour.address.upcase %> </b></p>  
      <p><%=t('employer_name')%> %  <b>  <%= @raid.employer_name.upcase %> <br> </b> <%=t('address')%> % <b>  <%= @raid.employer_address.upcase %></b></p>
      </div>
    </div>
    
    <div class="row reports">
      <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Sr. No.</th>
            <th>Question</th>
            <th>Answer</th>
          </tr>
        </thead>
        <tbody>
          <% @child_labour.answers.each_with_index do |ans, i|%>
          <tr>
            <td><%= i+1 %></td>
            <td><%= ans.question.question %></td>
            <td><%= ans.answer %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
    <div class="row reports">
      <div class="col-md-12">
      <p>Description: <b><%= @child_labour.description %></b></p>
      <p>Submited by user: <b><%= @child_labour.submited_by_user %></b></p>
      </div>
    </div>
  </div>
</div>
