<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag 'application' %>
  </head>
  <body>
    <div class="container">
      <div class="col-md-12">
        <%= wicked_pdf_image_tag 'Logo.jpg',class: 'logo'%>
      </div>
    </div><br/>
  <div class="container inter-body">
  <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-7">
  <% @childs.each do |child| %>
    <div class="row reports">
      <div class="col-md-9">
      <p>Police station, mumbai  <b><%= child.raid.department%></b></p>
      </div>
      <div class="col-md-3">
      <p>Date: <b><%= child.raid.datetime.strftime("%d, %B %Y")%></b></p>
      </div>
    </div>
    <div class="row reports">
      <div class="col-md-12">
      <p>Child name: <b><%= child.full_name.upcase %></b> father name <b><%= child.father_name.upcase %></b> mother name <b><%= child.mother_name.upcase %></b> age <b><%= child.age %></b> gender <b><%= child.gender %></b> Address: <b><%= child.address.upcase %></b></p>
      <p>Employer name: <b><%= child.raid.employer_name.upcase %></b> address <b><%= child.raid.employer_address.upcase %></b></p>
      </div>
    </div>
    <div class="row reports">
      <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Sr. No.</th>
            <th>Question</th>
            <th>Answer</th>
          </tr>
        </thead>
        <tbody>
          <% child.answers.each_with_index do |ans, i|%>
          <tr>
            <td><%= i+1 %></td>
            <td><%= ans.question.question %></td>
            <td><%= ans.answer %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
    <div class="row reports">
      <div class="col-md-12">
      <p>Description: <b><%= child.description %></b></p>
      <p>Submited by user: <b><%= child.submited_by_user %></b></p>
      </div>
    </div>
    <div class="page-break"></div>
    <% end %>
  </div>
  </div>
  </div>
  </body>
</html>